<div class="row justify-content-center">

    <h1 class="text-center polarText display-1">Survey</h1>
    <form action="" class="my-4 border border-dark col-9 logoGray border-3">
            <div class="row justify-content-center my-4">
              
            </div>
            <div class="row justify-content-center my-4">
              <h4 class="col-8">This is the example question?</h4>
               <input type="text" class="col-8" id="question" placeholder="Your Question" name="yourname" value="<%= question.YourQuestion %>">
            </div>
            <div class="row justify-content-center">
                <div class="row justify-content-center col-6">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" name="choice1" value="<%= question.FirstChoice %>">
                    <label class="form-check-label" for="flexRadioDefault1">
                      First Choice 
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" name="choice2" value="<%= question.SecondChoice %>">
                    <label class="form-check-label" for="flexRadioDefault2">
                      Second Choice
                    </label>
                  </div>
                  <div class="form-check ">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault3" name="choice3" value="<%= question.ThirdChoice %>">
                    <label class="form-check-label" for="flexRadioDefault3">
                      Third Choice
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault4" name="choice4" value="<%= question.ForthChoice %>">
                    <label class="form-check-label" for="flexRadioDefault4">
                      Forth Choice
                    </label>
                  </div>
                </div>
              </div>
              
              
          <div class="row justify-content-center">
            <button type="submit" class="btn btn-primary col-3 my-3">Submit</button>
            <a href="/account" class="btn btn-warning col-3 my-3">Cancel</a>
          </div>
          
    </form>
    <h3 class="polarText">Feel free to delete or add more as you need. (this is a message to the developers)</h3>
    
</div>