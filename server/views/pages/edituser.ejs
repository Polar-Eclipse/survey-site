<div class="row justify-content-center">

  <h1 class="text-center polarText display-1 mt-5 pt-3">Edit Account</h1>

  <!-- message area -->
  <% if(messages.length > 0) { %>
  <div id="messageArea" class="alert alert-danger">
    <%= messages %>
  </div>
  <% } %>

  <form method="POST" class="my-4 border border-dark col-9 logoGray border-3">
    <div class="row justify-content-center my-4 container text-center pe-5">
      <label for="username" class="col-lg-4 text-md-end text-sm-start">id</label>
      <input type="text" class="col-lg-6 mx-1" id="username" placeholder=" User Name" name="userid" required
        value=<%= user._id %> disabled>
      <div class="col-2"></div>
    </div>
    <div class="row justify-content-center my-4 container text-center pe-5">
      <label for="username" class="col-lg-4 text-md-end text-sm-start">User Name</label>
      <input type="text" class="col-lg-6 mx-1" id="username" placeholder=" User Name" name="username" required
        value=<%= user.username %> disabled>
      <div class="col-2"></div>
    </div>
    <div class="row justify-content-center my-4 container text-center pe-5">
      <label for="email" class="col-lg-4 text-md-end text-sm-start">E-mail</label>
      <input type="email" class="col-lg-6 mx-1" id="email" placeholder="myemail@email.com" name="email" required
        value=<%= user.emailAddress %>>
      <div class="col-2"></div>
    </div>
    <div class="row justify-content-center my-4 container text-center pe-5">
      <label for="contactNumber" class="col-lg-4 text-md-end text-sm-start">Contact Number</label>
      <input type="number" class="col-lg-6 mx-1" id="ContactNumber" placeholder="eg. 444-4444" name="contactnumber" required
        value=<%= user.contactNumber %>>
      <div class="col-2"></div>
    </div>
    <div class="row justify-content-center my-4 container text-center pe-5">
      <label for="password" class="col-lg-4 text-md-end text-sm-start">Current Password</label>
      <input type="password" class="col-lg-6 mx-1" id="currentpassword" placeholder="Current Password" name="currentpassword"
        required>
      <div class="col-2"></div>
    </div>
    <div class="row justify-content-center my-4 container text-center pe-5">
      <label for="password" class="col-sm-4 text-md-end text-sm-start">New Password</label>
      <input type="password" class="col-sm-6 mx-1" id="newpassword" placeholder="New Password" name="newpassword">
      <div class="col-2"></div>
    </div>
    <div class="row justify-content-center pb-5">
      <button type="submit" class="customButtonDownload col-3">Edit</button>
      <div class="col-1"></div>
      <a href="/account" class="customButtonResult col-3 text-center">Cancel</a>
      <br>
    </div>
  </form>

</div>
