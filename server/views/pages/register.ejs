<div class="row justify-content-center">

  <h1 class="text-center polarText display-1 mt-5 pt-3">Register</h1>

  <!-- message area -->
  <% if(messages.length > 0) { %>
  <div id="messageArea" class="alert alert-danger">
    <%= messages %>
  </div>
  <% } %>

  <form action="" method="POST" class="my-4 border border-dark col-9 logoGray border-3">
    <div class="row justify-content-center my-4 container text-center pe-5">
      <label for="username" class="col-lg-4 text-md-end text-sm-start">User Name</label>
      <input type="text" class="col-lg-6 mx-1" id="username" placeholder=" (if we are using it)" name="username" required>
      <div class="col-1"></div>
    </div>
    <div class="row justify-content-center my-4 container text-center pe-5">
      <label for="email" class="col-lg-4 text-md-end text-sm-start">E-mail</label>
      <input type="email" class="col-lg-6 mx-1" id="email" placeholder="myemail@email.com" name="email" required>
      <div class="col-1"></div>
    </div>
    <div class="row justify-content-center my-4 container text-center pe-5">
      <label for="contactNumber" class="col-lg-4 text-md-end text-sm-start">Contact Number</label>
      <input type="number" class="col-lg-6 mx-1" id="ContactNumber" placeholder="eg. 444-4444" name="contactnumber" required>
      <div class="col-1"></div>
    </div>
    <div class="row justify-content-center my-4 container text-center pe-5">
      <label for="password" class="col-lg-4 text-md-end text-sm-start">Password</label>
      <input type="password" class="col-lg-6 mx-1" id="password" placeholder="Password" name="password" required>
      <div class="col-1"></div>
    </div>
    <div class="row justify-content-center pb-4">
      <button type="submit" class="customButtonSpecial col-4 mb-2">Register</button>
      <br>
      <p class="text-center"><a href="/login">Click Here</a> to if you already have an account</p>
    </div>
  </form>
</div>
