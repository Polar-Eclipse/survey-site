<div class="row justify-content-center">

  <h1 class="text-center polarText display-1">Make A Survey</h1>
  <form action="" class="my-4 border border-dark col-9 logoGray border-3">
  <% for(let count = 1; count < 6; count++) {%>
    <div class="row justify-content-center my-4">
      <label for="question" class="col-3 text-end"><%= count %>) Your Question</label>
      <input type="text" class="col-8" id="question" placeholder="Your Question" name="question<%= count %>">
      <div class="col-1"></div>
    </div>
    <div class="row justify-content-center my-4">
      <label for="choice1" class="col-3 text-end">First Choice</label>
      <input type="text" class="col-7" id="choice1" placeholder="True" name="Q<%= count %>choice1">
      <div class="col-1"></div>
    </div>
    <div class="row justify-content-center my-4">
      <label for="choice2" class="col-3 text-end">Second Choice</label>
      <input type="text" class="col-7" id="choice2" placeholder="False" name="Q<%= count %>choice2">
      <div class="col-1"></div>
    </div>
    <hr>
    <% } %>
    <div class="row justify-content-center my-4">
      <label for="activeFor" class="col-3 text-end">Days Active</label>
      <input type="number" class="col-7" id="activeFor" placeholder="Days active after creating" name="activeFor">
      <div class="col-1"></div>
    </div>
    <div class="row justify-content-center">
      <button type="submit" class="btn btn-primary col-3 my-3">Make It</button>
      <a href="/account" class="btn btn-warning col-3 my-3">Cancel</a>
    </div>
  </form>
  <h3 class="polarText">Feel free to delete or add more as you need. (this is a message to the developers)</h3>

</div>
