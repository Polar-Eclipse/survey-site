<div class="row justify-content-center">
  <h1 class="text-center polarText display-1">Make A Survey</h1>

  <!--Radio Button Form STARTS-->
  <div class="text-center my-4 border border-dark col-9 logoGray border-3 whiteText py-3">
    <form action="" id="TableSwitcher" class="text-center">
  <input type="radio" id="TrueFalse" name="surveyType" value="TF">
  <label for="TrueFalse" class="me-3"> True or False Survey</label>
  <input type="radio" id="MultipleChoice" name="surveyType" value="MC">
  <label for="MultipleChoice"> Multiple Choice Survey</label>
    </form>
  </div>
  <!--Radio Buttion Form ENDS-->

  <!--True or False Form STARTS-->
  <h2 class="text-center polarText display-4" id="h2Title">True Or False </h2>
  <form method="POST" class="my-4 border border-dark col-9 logoGray border-3 whiteText" id="TFCreatorForm">
    <div class="row justify-content-center my-4">
      <label for="title" class="col-3 text-end">title</label>
      <input type="text" class="col-7" id="title" placeholder="Survey Title" name="title" required>
      <div class="col-1"></div>
    </div>
    <div class="row justify-content-center my-4">
      <label for="activeFor" class="col-3 text-end">Active From</label>
      <input type="date" class="col-7" id="activeFrom" placeholder="Start Date" name="activeFrom" required>
      <div class="col-1"></div>
    </div>
    <div class="row justify-content-center my-4">
      <label for="activeFor" class="col-3 text-end">Active Til</label>
      <input type="date" class="col-7" id="expiresAt" placeholder="End Date" name="expiresAt">
      <div class="col-1"></div>
    </div>
    <div class="row justify-content-center align-items-center my-4">
      <div class="col-10 col-lg-4 text-center text-lg-end me-4">
        <label for="isActiveStateOverridden" class="form-label me-2 mb-2"
          title="You can override the visibility of this survey regardless of the active/expire dates. If you check this, the value for the 'Override Value' will be used to set if your survey is visible or not.">
          Override Active State
        </label>
        <input type="checkbox" class="form-check-input" name="isActiveStateOverridden" id="isActiveStateOverridden">
      </div>
      <div class="col-10 col-lg-8 row align-items-center">
        <span class="col-12 col-lg-5 text-center text-lg-end mb-1 mb-lg-0">Override Value</span>
        <div class="col-6 col-lg-3 text-center">
          <input type="radio" name="activeOverride" id="activeOverrideActive" class="form-check-input" value="true"
            checked>
          <label for="activeOverrideActive" class="form-label">Active</label>
        </div>
        <div class="col-6 col-lg-3 text-center">
          <input type="radio" name="activeOverride" id="activeOverrideInactive" class="form-check-input" value="false">
          <label for="activeOverrideInactive" class="form-label">Inactive</label>
        </div>
      </div>
    </div>
    <% for(let count = 1; count < 6; count++) {%>
    <div class="row justify-content-center my-4">
      <label for="question" class="col-3 text-end"><%= count %>) Your Question</label>
      <input type="text" class="col-8" id="question" placeholder="Your Question" name="question<%= count %>" required>
      <div class="col-1"></div>
    </div>
    <hr>
    <% } %>
    <div class="row justify-content-center pb-4">
      <button type="submit" class="customButtonDownload col-3" style="display: inline-block;">Make It</button>
      <div class="col-1"></div>
      <a href="/account" class="customButtonCancel col-3 text-center">Cancel</a>
    </div>
  </form>
  <!--True or False Form ENDS-->

  <!--MC Form STARTS-->
  <form method="POST" class="my-4 border border-dark col-9 logoGray border-3 whiteText" id="MCCreatorForm" hidden>
    <div class="row justify-content-center my-4">
      <label for="title" class="col-3 text-end">title</label>
      <input type="text" class="col-7" id="title" placeholder="Survey Title" name="title" required>
      <div class="col-1"></div>
    </div>
    <div class="row justify-content-center my-4">
      <label for="activeFor" class="col-3 text-end">Active From</label>
      <input type="date" class="col-7" id="activeFrom" placeholder="Start Date" name="activeFrom" required>
      <div class="col-1"></div>
    </div>
    <div class="row justify-content-center my-4">
      <label for="activeFor" class="col-3 text-end">Active Til</label>
      <input type="date" class="col-7" id="expiresAt" placeholder="End Date" name="expiresAt">
      <div class="col-1"></div>
    </div>
    <div class="row justify-content-center align-items-center my-4">
      <div class="col-10 col-lg-4 text-center text-lg-end me-4">
        <label for="isActiveStateOverridden" class="form-label me-2 mb-2"
          title="You can override the visibility of this survey regardless of the active/expire dates. If you check this, the value for the 'Override Value' will be used to set if your survey is visible or not.">
          Override Active State
        </label>
        <input type="checkbox" class="form-check-input" name="isActiveStateOverridden" id="isActiveStateOverridden">
      </div>
      <div class="col-10 col-lg-8 row align-items-center">
        <span class="col-12 col-lg-5 text-center text-lg-end mb-1 mb-lg-0">Override Value</span>
        <div class="col-6 col-lg-3 text-center">
          <input type="radio" name="activeOverride" id="activeOverrideActive" class="form-check-input" value="true"
            checked>
          <label for="activeOverrideActive" class="form-label">Active</label>
        </div>
        <div class="col-6 col-lg-3 text-center">
          <input type="radio" name="activeOverride" id="activeOverrideInactive" class="form-check-input" value="false">
          <label for="activeOverrideInactive" class="form-label">Inactive</label>
        </div>
      </div>
    </div>
    <% let answerLabeler = ["a", "b", "c", "d"]; %>
    <% for(let count = 1; count < 6; count++) {%>
    <div class="row justify-content-center my-4">
      <label for="question" class="col-3 text-end"><%= count %>) Your Question</label>
      <input type="text" class="col-8" id="question" placeholder="Your Question" name="question<%= count %>" required>
      <div class="col-1"></div>
    </div>
      <% for(let answerCount = 1; answerCount < 5; answerCount++) { %>
        <label for="question" class="col-3 text-end"><%= answerLabeler[answerCount - 1] %>) Your Answer</label>
        <input type="text" class="col-8" id="answer<%= answerCount %>" placeholder="Your Answer" name="answer<%= answerCount %>" required>
      <% } %>

    <hr>
    <% } %>
    <div class="row justify-content-center pb-4">
      <button type="submit" class="customButtonDownload col-3">Make It</button>
      <div class="col-1"></div>
      <a href="/account" class="customButtonCancel col-3 text-center">Cancel</a>
    </div>
  </form>
  <!--MC Form ENDS-->
</div>
