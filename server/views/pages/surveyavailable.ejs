<h1 class="text-center">Available Survey</h1>
<div class="row">
    <div class="col">
        <table class="table border border-dark">
            <thead>
              <br><br>
              <tr>
                 <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Created On</th>
                <th scope="col">Expires At</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>

                <!--Repeatable Row Template-->

               <% for(let count = 0; count < survey.length; count++){ %>
               <tr>
                <th scope="row"><%= count + 1 %></th>
                <td><%= survey[count].title %></td>
                <td><%= survey[count].activeFrom %></td>
                <td><%= survey[count].expiresAt %></td>
                <td class="text-center"><a href="/question" class="btn btn-warning editBTN"> Take</a> </td>
                <td class="text-center"><a href="/delete/<%= survey[count]._id %>" class="btn btn-danger delete"><i class="fas fa-trash-alt fa-sm"></i> Delete</a></td>
              </tr>
              <% } %>
            </tbody>
          </table>
        <!--Table Goes Here-->
    </div>
</div>
